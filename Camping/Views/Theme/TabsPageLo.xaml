	<TabbedPage.Children>

		<ContentPage Title="Light" Icon="tabs0_icon.png">
			<ContentPage.Content>
				<Grid>
					<Image
						Grid.Row="0"
						VerticalOptions="Center"
						HorizontalOptions="Center"
